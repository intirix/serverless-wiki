{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {

    "PageBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
      }
    },




    "UserPool": {
      "Type" : "AWS::Cognito::UserPool",
      "Properties": {
        "UserPoolName": "WikiPool"
      }
    },




    "Role": {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com",
                  "apigateway.amazonaws.com"
                ]
              },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Path": "/"
      }
    },



    "FunctionPolicy": {
      "DependsOn": [
        "Role"
      ],
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Roles": [ {"Ref":"Role"} ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:*"
              ],
              "Resource": "arn:aws:logs:*:*:*"
            }
          ]
        }
      }
    },



    "Function": {
      "DependsOn": [
        "Role",
        "FunctionPolicy"
      ],
      "Type" : "AWS::Lambda::Function",
      "Properties" : {
        "Code" : {
          "S3Bucket": "intirix-software-us-east-1",
           "S3Key": "wiki/alpha/lambda.zip"
        },
        "Description" : "Serverless Wiki Lambda function",
        "FunctionName" : {"Fn::Join": ["",[{"Ref":"AWS::StackName"},"-func"]]},
        "Handler" : "lambda_functions.single_func",
        "Environment": {
          "Variables": {
            "PAGE_BUCKET": {"Ref":"PageBucket"}
          }
        },
        "MemorySize" : 128,
        "Runtime" : "python2.7",
        "Role" : {"Fn::GetAtt" : [ "Role", "Arn" ]},
        "Timeout" : 60
      }
    },



    "RestApi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": "Wiki-API"
      }
    },



    "RestResourceV1": {
      "DependsOn": [
        "RestApi"
      ],
      "Type" : "AWS::ApiGateway::Resource",
      "Properties" : {
        "ParentId" : { "Fn::GetAtt": ["RestApi", "RootResourceId"] },
        "PathPart" : "v1",
        "RestApiId" : {"Ref":"RestApi"}
      }
    }


  }
}
