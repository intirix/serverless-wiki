{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {

    "PageBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
      }
    },

    "WebsiteBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl" : "PublicRead",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        }
      }
    },


    "WebsiteBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "MyPolicy",
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "PublicReadForGetBucketObjects",
              "Effect": "Allow",
              "Principal": "*",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "WebsiteBucket"
                    },
                    "/*"
                  ]
                ]
              }
            }
          ]
        },
        "Bucket": {"Ref": "WebsiteBucket"}
      }
    },




    "UserPool": {
      "Type" : "AWS::Cognito::UserPool",
      "Properties": {
        "UserPoolName": "WikiPool"
      }
    },

    "UserPoolClientWeb": {
      "Type" : "AWS::Cognito::UserPoolClient",
      "Properties": {
        "ClientName": "WebClient",
        "UserPoolId": {"Ref": "UserPool"},
        "GenerateSecret": "false"
      }
    },



    "Role": {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com",
                  "apigateway.amazonaws.com"
                ]
              },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Path": "/"
      }
    },



    "FunctionPolicy": {
      "DependsOn": [
        "Role",
        "RestApi"
      ],
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Roles": [ {"Ref":"Role"} ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:*"
              ],
              "Resource": "arn:aws:logs:*:*:*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "s3:*"
              ],
              "Resource": [
                {"Fn::GetAtt" : [ "PageBucket", "Arn" ]},
                {"Fn::Join" : ["",[{"Fn::GetAtt" : [ "PageBucket", "Arn" ]},"/*"]]},
                {"Fn::GetAtt" : [ "WebsiteBucket", "Arn" ]},
                {"Fn::Join" : ["",[{"Fn::GetAtt" : [ "WebsiteBucket", "Arn" ]},"/*"]]}
              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "apigateway:GET"
              ],
              "Resource": [
                {"Fn::Join": ["",["arn:aws:apigateway:us-east-1::/restapis/",
                  {"Ref":"RestApi"},"/stages/prod/sdks/javascript"]]}
              ]
            }
          ]
        }
      }
    },



    "Function": {
      "DependsOn": [
        "Role",
        "FunctionPolicy",
        "RestApi"
      ],
      "Type" : "AWS::Lambda::Function",
      "Properties" : {
        "Code" : {
          "S3Bucket": "intirix-software-us-east-1",
           "S3Key": "wiki/alpha/lambda.zip"
        },
        "Description" : "Serverless Wiki Lambda function",
        "FunctionName" : {"Fn::Join": ["",[{"Ref":"AWS::StackName"},"-func"]]},
        "Handler" : "lambda_functions.single_func",
        "Environment": {
          "Variables": {
            "REST_API": {"Ref":"RestApi"},
            "REST_STAGE": "prod",
            "PAGE_BUCKET": {"Ref":"PageBucket"},
            "WEBSITE_BUCKET": {"Ref":"WebsiteBucket"}
          }
        },
        "MemorySize" : 128,
        "Runtime" : "python2.7",
        "Role" : {"Fn::GetAtt" : [ "Role", "Arn" ]},
        "Timeout" : 60
      }
    },



    "RestApi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": "Wiki-API"
      }
    },


    "LambdaPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:invokeFunction",
        "FunctionName": {"Fn::GetAtt": ["Function", "Arn"]},
        "Principal": "apigateway.amazonaws.com",
        "SourceArn": {"Fn::Join": ["",[
          "arn:aws:execute-api:", {"Ref": "AWS::Region"}, ":", {"Ref": "AWS::AccountId"}, ":",
          {"Ref": "RestApi"}, "/*/*/*"]
        ] }
      }
    },


    "RestDeployment": {
      "DependsOn": [
        "RestApi",
        "Function",
        "RestMethodGETV1PagesPage",
        "RestMethodPOSTV1PagesPage",
        "RestMethodPUTV1PagesPage"
      ],
      "Type": "AWS::ApiGateway::Deployment",
      "Properties": {
        "RestApiId" : {"Ref":"RestApi"}
      }
    },

    "RestStage": {
      "DependsOn": [
        "RestDeployment"
      ],
      "Type": "AWS::ApiGateway::Stage",
      "Properties": {
        "DeploymentId": {"Ref":"RestDeployment"},
        "RestApiId" : {"Ref":"RestApi"},
        "MethodSettings": [
          {
            "DataTraceEnabled": true,
            "HttpMethod": "*",
            "LoggingLevel": "INFO",
            "ResourcePath": "/*"
          }
        ],
        "StageName": "prod"
      }
    },







    "RestResourceV1": {
      "DependsOn": [
        "RestApi"
      ],
      "Type" : "AWS::ApiGateway::Resource",
      "Properties" : {
        "ParentId" : { "Fn::GetAtt": ["RestApi", "RootResourceId"] },
        "PathPart" : "v1",
        "RestApiId" : {"Ref":"RestApi"}
      }
    },





    "RestResourceV1Pages": {
      "DependsOn": [
        "RestResourceV1",
        "Function"
      ],
      "Type" : "AWS::ApiGateway::Resource",
      "Properties" : {
        "ParentId" : {"Ref":"RestResourceV1"},
        "PathPart" : "pages",
        "RestApiId" : {"Ref":"RestApi"}
      }
    },

    "RestResourceV1PagesPage": {
      "DependsOn": [
        "RestResourceV1Pages",
        "Function"
      ],
      "Type" : "AWS::ApiGateway::Resource",
      "Properties" : {
        "ParentId" : {"Ref":"RestResourceV1Pages"},
        "PathPart" : "{page}",
        "RestApiId" : {"Ref":"RestApi"}
      }
    },



    "RestMethodOPTIONSV1PagesPage": {
      "DependsOn": [
        "RestResourceV1PagesPage"
      ],
      "Type" : "AWS::ApiGateway::Method",
      "Properties" : {
        "AuthorizationType": "NONE",
        "HttpMethod": "OPTIONS",
        "Integration": {
          "Type": "MOCK",
          "IntegrationResponses": [
            {
              "ResponseParameters": {
                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
                "method.response.header.Access-Control-Allow-Methods": "'GET,POST,PUT,OPTIONS,DELETE'",
                "method.response.header.Access-Control-Allow-Origin": "'*'"
              },
              "ResponseTemplates": {
                "application/json": ""
              },
              "StatusCode": "200"
            }
          ],
          "PassthroughBehavior": "NEVER",
          "RequestTemplates": {
            "application/json": "{\"statusCode\": 200}"
          }
        },
        "MethodResponses": [
          {
            "ResponseParameters": {
              "method.response.header.Access-Control-Allow-Headers": true,
              "method.response.header.Access-Control-Allow-Methods": true,
              "method.response.header.Access-Control-Allow-Origin": true
            },
            "StatusCode": "200"
          }
        ],
        "ResourceId": {"Ref":"RestResourceV1PagesPage"},
        "RestApiId": {"Ref":"RestApi"}
      }
    },



    "RestMethodGETV1PagesPage": {
      "DependsOn": [
        "RestResourceV1PagesPage",
        "LambdaPermission"
      ],
      "Type" : "AWS::ApiGateway::Method",
      "Properties" : {
        "AuthorizationType": "NONE",
        "HttpMethod": "GET",
        "RequestParameters": {
          "method.request.path.page": true
        },
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {"Fn::Join": [ "", [
              "arn:aws:apigateway:",
              {"Ref":"AWS::Region"},
              ":lambda:path/2015-03-31/functions/",
              {"Fn::GetAtt" : [ "Function", "Arn" ]},
              "/invocations"
            ]]}
        },
        "MethodResponses": [
          {
            "StatusCode": "200"
          }
        ],
        "ResourceId": {"Ref":"RestResourceV1PagesPage"},
        "RestApiId": {"Ref":"RestApi"}
      }
    },



    "RestMethodPOSTV1PagesPage": {
      "DependsOn": [
        "RestResourceV1PagesPage",
        "LambdaPermission"
      ],
      "Type" : "AWS::ApiGateway::Method",
      "Properties" : {
        "AuthorizationType": "NONE",
        "HttpMethod": "POST",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {"Fn::Join": [ "", [
              "arn:aws:apigateway:",
              {"Ref":"AWS::Region"},
              ":lambda:path/2015-03-31/functions/",
              {"Fn::GetAtt" : [ "Function", "Arn" ]},
              "/invocations"
            ]]}
        },
        "MethodResponses": [
          {
            "StatusCode": "200"
          }
        ],
        "ResourceId": {"Ref":"RestResourceV1PagesPage"},
        "RestApiId": {"Ref":"RestApi"}
      }
    },




    "RestMethodPUTV1PagesPage": {
      "DependsOn": [
        "RestResourceV1PagesPage",
        "LambdaPermission"
      ],
      "Type" : "AWS::ApiGateway::Method",
      "Properties" : {
        "AuthorizationType": "NONE",
        "HttpMethod": "PUT",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {"Fn::Join": [ "", [
              "arn:aws:apigateway:",
              {"Ref":"AWS::Region"},
              ":lambda:path/2015-03-31/functions/",
              {"Fn::GetAtt" : [ "Function", "Arn" ]},
              "/invocations"
            ]]}
        },
        "MethodResponses": [
          {
            "StatusCode": "200"
          }
        ],
        "ResourceId": {"Ref":"RestResourceV1PagesPage"},
        "RestApiId": {"Ref":"RestApi"}
      }
    },

    "RestResourceV1Search": {
      "DependsOn": [
        "RestResourceV1",
        "Function"
      ],
      "Type" : "AWS::ApiGateway::Resource",
      "Properties" : {
        "ParentId" : {"Ref":"RestResourceV1"},
        "PathPart" : "search",
        "RestApiId" : {"Ref":"RestApi"}
      }
    },
		"RestResourceV1SearchQuery": {
			"DependsOn": [
				"RestResourceV1Search",
				"Function"
			],
			"Type" : "AWS::ApiGateway::Resource",
			"Properties" : {
				"ParentId" : {"Ref":"RestResourceV1Search"},
				"PathPart" : "{query}",
				"RestApiId" : {"Ref":"RestApi"}
			}
		},
		"RestMethodGETV1SearchQuery": {
      "DependsOn": [
        "RestResourceV1SearchQuery",
        "LambdaPermission"
      ],
      "Type" : "AWS::ApiGateway::Method",
      "Properties" : {
        "AuthorizationType": "NONE",
        "HttpMethod": "GET",
        "RequestParameters": {
          "method.request.path.query": true
        },
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {"Fn::Join": [ "", [
              "arn:aws:apigateway:",
              {"Ref":"AWS::Region"},
              ":lambda:path/2015-03-31/functions/",
              {"Fn::GetAtt" : [ "Function", "Arn" ]},
              "/invocations"
            ]]}
        },
        "MethodResponses": [
          {
            "StatusCode": "200"
          }
        ],
        "ResourceId": {"Ref":"RestResourceV1SearchQuery"},
        "RestApiId": {"Ref":"RestApi"}
      }
    },
		"RestMethodOPTIONSV1SearchQuery": {
			"DependsOn": [
				"RestResourceV1SearchQuery"
			],
			"Type" : "AWS::ApiGateway::Method",
			"Properties" : {
				"AuthorizationType": "NONE",
				"HttpMethod": "OPTIONS",
				"Integration": {
					"Type": "MOCK",
					"IntegrationResponses": [
						{
							"ResponseParameters": {
								"method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
								"method.response.header.Access-Control-Allow-Methods": "'GET,POST,PUT,OPTIONS,DELETE'",
								"method.response.header.Access-Control-Allow-Origin": "'*'"
							},
							"ResponseTemplates": {
								"application/json": ""
							},
							"StatusCode": "200"
						}
					],
					"PassthroughBehavior": "NEVER",
					"RequestTemplates": {
						"application/json": "{\"statusCode\": 200}"
					}
				},
				"MethodResponses": [
					{
						"ResponseParameters": {
							"method.response.header.Access-Control-Allow-Headers": true,
							"method.response.header.Access-Control-Allow-Methods": true,
							"method.response.header.Access-Control-Allow-Origin": true
						},
						"StatusCode": "200"
					}
				],
				"ResourceId": {"Ref":"RestResourceV1SearchQuery"},
				"RestApiId": {"Ref":"RestApi"}
			}
		}


  },
  "Outputs": {
    "WebsiteURL": {
      "Value": {
        "Fn::GetAtt": [
          "WebsiteBucket",
          "WebsiteURL"
        ]
      },
      "Description": "URL for website hosted on S3"
    }
  }
}
